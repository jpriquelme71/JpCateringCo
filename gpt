// JP Catering Co. – Web sencilla con dashboard de servicios

import React from 'react';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { BrowserRouter as Router, Routes, Route, Link } from 'react-router-dom';

const services = [
  { id: "lunchbox", name: "Sándwich en Caja o Bowl" },
  { id: "empanadas", name: "Empanadas & Pico de Gallo" },
  { id: "coffeebreak", name: "Coffee Break" },
  { id: "desayuno", name: "Desayunos Corporativos" },
];

const Dashboard = () => (
  <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4 p-4">
    {services.map(service => (
      <Card key={service.id} className="shadow-xl">
        <CardContent className="p-4 flex flex-col items-center">
          <h2 className="text-xl font-bold mb-2">{service.name}</h2>
          <Link to={`/${service.id}`}>
            <Button className="mt-2">Ver Detalles</Button>
          </Link>
        </CardContent>
      </Card>
    ))}
  </div>
);

const ServiceDetail = ({ id, name, description }) => (
  <div className="p-6">
    <h1 className="text-2xl font-bold mb-4">{name}</h1>
    <p className="text-base whitespace-pre-line">{description}</p>
    <Link to="/">
      <Button className="mt-6">Volver al Inicio</Button>
    </Link>
  </div>
);

const descriptions = {
  lunchbox: `Ofrecemos sándwiches gourmet en caja o bowl. Incluye:
- Sándwich a elección (croissant, multigrain, etc.)
- Chips o ensalada
- Cookie o muffin
- Jugo o agua embotellada`,

  empanadas: `Empanadas chilenas clásicas:
- De pino (carne con cebolla)
- De queso
- De queso con camarón
Acompañadas de pico de gallo o ají chileno casero en posillos pequeños.`,

  coffeebreak: `Ideal para oficinas o reuniones:
- Café/té caliente
- Mini sándwiches jamón/queso
- Churros con azúcar o manjar
- Cookies y mini muffins`,

  desayuno: `Desayunos corporativos completos:
- Croissant o biscuit con huevo, queso y bacon o sausage
- Panqueques con syrup
- Omelettes rellenos
- Bakery: muffins y cookies
- Jugo, agua o café`
};

const App = () => (
  <Router>
    <Routes>
      <Route path="/" element={<Dashboard />} />
      {services.map(service => (
        <Route
          key={service.id}
          path={`/${service.id}`}
          element={
            <ServiceDetail
              id={service.id}
              name={service.name}
              description={descriptions[service.id]}
            />
          }
        />
      ))}
    </Routes>
  </Router>
);

export default App;
